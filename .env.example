# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=backup_user
DB_PASSWORD=your_password
DB_NAME=production_db

# MySQL Config (optional)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password

# MongoDB Config (optional)
MONGO_URI=mongodb://localhost:27017

# Backup Configuration
BACKUP_DIR=/var/backups
BACKUP_SCHEDULE=0 2 * * *
RETENTION_DAYS=30
MAX_BACKUPS=10

# Verification
VERIFY_BACKUPS=true
AUTO_RESTORE_TEST=true
RESTORE_TEST_SCHEDULE=0 4 * * 0

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
