{
  "name": "backup-orchestrator-verification",
  "version": "1.0.0",
  "description": "Backup orchestrator for databases and volumes with integrity verification and automatic restore testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "backup": "npm run build && node dist/cli.js backup",
    "restore": "npm run build && node dist/cli.js restore",
    "verify": "npm run build && node dist/cli.js verify"
  },
  "keywords": [
    "backup",
    "database",
    "verification",
    "restore",
    "orchestrator",
    "typescript"
  ],
  "author": "Mario Perez <perezmario303@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "tar": "^7.5.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@types/node-cron": "^3.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}

